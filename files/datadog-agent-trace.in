#!/bin/sh

# $FreeBSD$
#
# PROVIDE: datadog_agent_trace
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following lines to /etc/rc.conf.local or /etc/rc.conf
# to enable this service:
#
# datadog_agent_trace_enable (bool):	Set to NO by default.
#				Set it to YES to enable Datadog trace Agent.
# datadog_agent_trace_user (user):	Set user to run Datadog trace Agent.
#				Default is "%%USER%%".
# datadog_agent_trace_conf (path):	Path to Datadog trace Agent configuration file.
#				Default is %%ETCDIR%%/datadog.yaml

. /etc/rc.subr

name=datadog_agent_trace
rcvar=datadog_agent_trace_enable

load_rc_config $name

: ${datadog_agent_trace_enable:="NO"}
: ${datadog_agent_trace_user:="%%USER%%"}
: ${datadog_agent_trace_conf:="%%ETCDIR%%/datadog.yaml"}

command="%%PREFIX%%/bin/datadog-trace-agent"
command_args="-c ${datadog_agent_trace_conf}"

required_files=%%ETCDIR%%/datadog.yaml
pidfile="%%RUNDIR%%/datadog-agent-trace.pid"

start_cmd="${name}_command start $@"
stop_cmd="${name}_command stop $@"
status_cmd="${name}_status"

datadog_agent_trace_status()
{
	rc_pid=`check_pidfile ${pidfile} ${command}`
	if [ -n "${rc_pid}" ]; then
		echo "Datadog trace agent is running as pid ${rc_pid}."
	else
		echo "Datadog trace agent is not running."
		return 1
	fi
}

datadog_agent_trace_start() {
	/usr/sbin/daemon -f -p ${pidfile} -u ${datadog_agent_user} ${command} ${command_args}
	return $?
}

datadog_agent_trace_stop() {
	rc_pid=`check_pidfile ${pidfile} ${command}`
	if [ -n "${rc_pid}" ]; then
		kill ${rc_pid}
	else
		echo "Datadog trace agent is not running."
	fi
}

run_rc_command "$@"
