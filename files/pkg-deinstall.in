#!/bin/sh
# $FreeBSD$

if [ "$2" != "POST-DEINSTALL" ]; then
	exit 0
fi

USER=%%USER%%

echo
echo "===================================================="
echo
echo "If you want remove DataDog permanently from you system"
echo "execute following commands:"
echo
echo " # rm -rf %%LOGDIR%%"
echo " # rm -rf %%RUNDIR%%"
echo " # rm -rf %%ETCDIR%%"
if pw usershow "${USER}" 2>/dev/null 1>&2; then
	echo " # pw userdel ${USER}"
fi
echo
echo "===================================================="
echo

exit 0
